{% extends 'base.html.twig' %}

{% block title %}Entrar, {{ parent()}}{% endblock %}

{% block body %}
    <section class="page_breadcrumbs ds parallax section_padding_75" style="background-position: 50% 1px;">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h2>Entrar en la aplicación</h2>
                    <p>Anunciarse gratis</p>
                    <ol class="breadcrumb greylinks">
                        <li>
                            <a href="/">Inicio</a>
                        </li>
                        <li>
                            <a href="{{ path('registaracion') }}">Registrarse</a>
                        </li>
                        <li class="active">Iniciar sesión</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

<div class="container" style="margin-top:111px; margin-bottom: 111px;">
    <div class="row">
             <form method="post">
                 {% if error %}
                     <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                 {% endif %}

                 {% if app.user %}
                     <div class="mb-3">
                        {{ app.user.username }}, <a href="{{ path('app_logout') }}">Salir</a>
                     </div>
                 {% endif %}

                 <label for="inputEmail">Email</label>
                 <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                 <label for="inputPassword">Password</label>
                 <input type="password" name="password" id="inputPassword" class="form-control" required>

                 <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >

                     <div class="checkbox mb-3">
                         <label>
                             <input type="checkbox" name="_remember_me"> Guardar email
                         </label>
                     </div>


                 <button type="submit" class="login_submit">
                     Entrar
                 </button>
             </form>
</div>
</div>
{% endblock %}
